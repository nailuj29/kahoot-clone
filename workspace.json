{
  "version": 2,
  "cli": {
    "defaultCollection": "@nrwl/express"
  },
  "defaultProject": "backend",
  "projects": {
    "frontend": {
      "root": "packages/frontend",
      "sourceRoot": "packages/frontend/src",
      "projectType": "application",
      "targets": {
        "build": {
          "executor": "@nxext/svelte:build",
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "dist/packages/frontend",
            "entryFile": "packages/frontend/src/main.ts",
            "tsConfig": "packages/frontend/tsconfig.app.json",
            "svelteConfig": "packages/frontend/svelte.config.cjs",
            "assets": [
              {
                "glob": "/*",
                "input": "packages/frontend/public/**",
                "output": "./"
              }
            ]
          },
          "configurations": {
            "production": {
              "dev": false
            }
          }
        },
        "serve": {
          "executor": "@nxext/svelte:build",
          "options": {
            "outputPath": "dist/packages/frontend",
            "entryFile": "packages/frontend/src/main.ts",
            "tsConfig": "packages/frontend/tsconfig.app.json",
            "svelteConfig": "packages/frontend/svelte.config.cjs",
            "assets": [
              {
                "glob": "/*",
                "input": "packages/frontend/public/**",
                "output": "./"
              }
            ],
            "watch": true,
            "serve": true
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["packages/frontend/**/*.{ts,svelte,spec.ts}"]
          }
        },
        "check": {
          "executor": "@nrwl/workspace:run-commands",
          "options": {
            "command": "svelte-check",
            "cwd": "packages/frontend"
          }
        }
      }
    },
    "backend": {
      "root": "packages/backend",
      "sourceRoot": "packages/backend/src",
      "projectType": "application",
      "targets": {
        "build": {
          "executor": "@nrwl/node:build",
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "dist/packages/backend",
            "main": "packages/backend/src/main.ts",
            "tsConfig": "packages/backend/tsconfig.app.json",
            "assets": ["packages/backend/src/assets"]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "extractLicenses": true,
              "inspect": false,
              "fileReplacements": [
                {
                  "replace": "packages/backend/src/environments/environment.ts",
                  "with": "packages/backend/src/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "executor": "@nrwl/node:execute",
          "options": {
            "buildTarget": "backend:build"
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["packages/backend/**/*.ts"]
          }
        }
      }
    },
    "database": {
      "root": "packages/database",
      "sourceRoot": "packages/database/src",
      "projectType": "library",
      "targets": {
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["packages/database/**/*.ts"]
          }
        }
      }
    },
    "auth": {
      "root": "packages/auth",
      "sourceRoot": "packages/auth/src",
      "projectType": "library",
      "targets": {
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["packages/auth/**/*.ts"]
          }
        }
      }
    }
  }
}
